<?xml version="1.0" encoding="utf-8"?>
<!-- $Id: bb_config.xml,v 1.14 2009/10/14 09:25:24 zws Exp $ -->
<bbConfig>

	<!-- B -->
	<match name="b">
		<regex>(?s)(?i)\[b\](.*?)\[/b\]</regex>
		<replace>
		<![CDATA[
		<b>$1</b>
		]]>
		</replace>
	</match>
	
	<!-- I -->
	<match name="i">
		<regex>(?s)(?i)\[i\](.*?)\[/i\]</regex>
		<replace>
		<![CDATA[
		<i>$1</i>
		]]>
		</replace>
	</match>
	
	<!-- U -->
	<match name="u">
		<regex>(?s)(?i)\[u\](.*?)\[/u\]</regex>
		<replace>
		<![CDATA[
		<u>$1</u>
		]]>
		</replace>
	</match>
	
	<!-- IMG -->
	<match name="img">
		<regex>(?i)\[img\](.*?)\[/img\]</regex>
		<replace>
		<![CDATA[
		<img src="$1" border="0" />
		]]>
		</replace>
	</match>
	
	<match name="img2">
		<regex>(?i)\[img=*([0-9]*),*([0-9]*)\](.*?)\[/img\]</regex>
		<replace>
		<![CDATA[
		<img src="$3" width="$1", height="$2" border="0" />
		]]>
		</replace>
	</match>
    
	<!-- Flash -->
	<match name="flash">
		<regex>(?i)\[flash\](.*?)\[/flash\]</regex>
		<replace>
		<![CDATA[
		<object classid="clsid:D27CDB6E-AE6D-11cf-96B8-444553540000" codebase="http://download.macromedia.com/pub/shockwave/cabs/flash/swflash.cab#version=9,0,28,0" width="750" height="500" title="flash">
			<param name="movie" value="$1" />
			<param name="quality" value="high" />
			<embed src="$1" quality="high" pluginspage="http://www.adobe.com/shockwave/download/download.cgi?P1_Prod_Version=ShockwaveFlash" type="application/x-shockwave-flash" width="750" height="500" />
		</object>
		]]>
		</replace>
	</match>

	<match name="email">
		<regex>\[email\](.*?)\[/email\]</regex>
		<replace>
		<![CDATA[
		<a class="snap_shots" href="mailto:$1">$1</a>
		]]>
		</replace>
	</match>

	<match name="auto-email">
		<regex>\[email=\s*([\w\-.+]+)@([\w\-]+[.][\w\-.]+)\s*\](.*?)\[/email\]</regex>
		<replace>
		<![CDATA[
		<a class="snap_shots" href="mailto:$1@$2">$3</a>
		]]>
		</replace>
	</match>
	
	<!-- URL -->
	<match name="simple-url">
		<regex>(?i)\[url\](.*?)\[/url\]</regex>
		<replace>
		<![CDATA[
		<a class="snap_shots" href="$1" target="_new" rel="nofollow">$1</a>
		]]>
		</replace>
	</match>
	
	<!-- URL=?? -->
	<match name="descriptive-url">
		<regex>(?i)\[url=['"]?(.*?[^'"])['"]?\](.*?)\[/url\]</regex>
		<replace>
		<![CDATA[
		<a class="snap_shots" href="$1" target="_new" rel="nofollow">$2</a>
		]]>
		</replace>
	</match>
	
	<!-- COLOR -->
	<match name="colorStart">
		<regex>(?s)(?i)\[color=['"]?(.*?[^'"])['"]?\]</regex>
		<replace>
		<![CDATA[
		<font color='$1'>
		]]>
		</replace>
	</match>
	<match name="colorEnd">
		<regex>(?s)(?i)\[/color\]</regex>
		<replace>
		<![CDATA[
		</font>
		]]>
		</replace>
	</match>
	
	<!-- face -->
	<match name="faceStart">
		<regex>(?s)(?i)\[font=['"]?(.*?[^'"])['"]?\]</regex>
		<replace>
		<![CDATA[
		<font face='$1'>
		]]>
		</replace>
	</match>
	<match name="faceEnd">
		<regex>(?s)(?i)\[/font\]</regex>
		<replace>
		<![CDATA[
		</font>
		]]>
		</replace>
	</match>

	<!-- SIZE -->
	<match name="sizeStart">
		<regex>(?s)(?i)\[size=['"]?(.*?[^'"])['"]?\]</regex>
		<replace>
		<![CDATA[
		<font size='$1' style='line-height:normal'>
		]]>
		</replace>
	</match>
	
	<match name="sizeEnd">
		<regex>(?s)(?i)\[/size\]</regex>
		<replace>
		<![CDATA[
		</font>
		]]>
		</replace>
	</match>

	<match name="alignStart1">
		<regex>(?s)(?i)\[align\]</regex>
		<replace>
		<![CDATA[
		<p>
		]]>
		</replace>
	</match>

	<match name="alignStart2">
		<regex>(?s)(?i)\[align=['"]?(left|center|right)['"]?\]</regex>
		<replace>
		<![CDATA[
		<p align="$1">
		]]>
		</replace>
	</match>
	
	<match name="alignEnd">
		<regex>(?s)(?i)\[/align\]</regex>
		<replace>
		<![CDATA[
		</p>
		]]>
		</replace>
	</match>
	
	<!-- sup -->
	<match name="sup">
		<regex>(?s)(?i)\[sup\](.*?)\[/sup\]</regex>
		<replace>
		<![CDATA[
		<sup>$1</sup>
		]]>
		</replace>
	</match>
	
	<!-- sub -->
	<match name="sub">
		<regex>(?s)(?i)\[sub\](.*?)\[/sub\]</regex>
		<replace>
		<![CDATA[
		<sub>$1</sub>
		]]>
		</replace>
	</match>
	
	<!-- fly -->
	<match name="fly">
		<regex>(?s)(?i)\[fly\](.*?)\[/fly\]</regex>
		<replace>
		<![CDATA[
		<marquee width="90%" behavior="alternate" scrollamount="3">$1</marquee>
		]]>
		</replace>
	</match>
	
	<!-- quote -->
	<match name="openSimpleQuote">
		<regex>(?i)\[quote\]</regex>
		<replace>
		<![CDATA[
		<div class="quote"><blockquote>
		]]>
		</replace>
	</match>
	
	<!-- quote -->
	<match name="openQuote">
		<regex>(?i)\[quote=['"]?(.*?[^'"])['"]?\]</regex>
		<replace>
		<![CDATA[
		<div class="quote">
			<h5>$1 :</h5>
			<blockquote>
		]]>
		</replace>
	</match>
	
	<match name="closeQuote">
		<regex>(?i)\[/quote\]</regex>
		<replace>
		<![CDATA[
		</blockquote></div>
		]]>
		</replace>
	</match>
	
	<!-- table1 -->
	<match name="tableStart1">
		<regex>(?s)(?i)\[table\]</regex>
		<replace>
		<![CDATA[
		<table class="ubb_table" >
		]]>
		</replace>
	</match>
	
	<match name="tableStart2">
		<regex>(?s)(?i)\[table=(.[^\[]*)\]</regex>
		<replace>
		<![CDATA[
		<table width="$1" class="ubb_table">
		]]>
		</replace>
	</match>
	<match name="tableStart3">
		<regex>(?s)(?i)\[table=(.[^\[]*),(.*?)\]</regex>
		<replace>
		<![CDATA[
		<table width="$1" style="background:$2" class="ubb_table">
		]]>
		</replace>
	</match>
	
	<match name="tableEnd">
		<regex>(?s)(?i)\[/table\]</regex>
		<replace>
		<![CDATA[
		</table>
		]]>
		</replace>
	</match>
	
	<match name="trStart">
		<regex>(?s)(?i)\[tr\]</regex>
		<replace>
		<![CDATA[
		<tr>
		]]>
		</replace>
	</match>
	
	<match name="trEnd">
		<regex>(?s)(?i)\[/tr\]</regex>
		<replace>
		<![CDATA[
		</tr>
		]]>
		</replace>
	</match>
	
	<match name="tdStart1">
		<regex>(?s)(?i)\[td\]</regex>
		<replace>
		<![CDATA[
		<td>
		]]>
		</replace>
	</match>
	
	<match name="tdStart2">
		<regex>(?s)(?i)\[td=([0-9]*),([0-9]*)\]</regex>
		<replace>
		<![CDATA[
		<td colspan="$1" rowspan="$2">
		]]>
		</replace>
	</match>
	
	<match name="tdStart3">
		<regex>(?s)(?i)\[td=([0-9]*),([0-9]*),(.*?)\]</regex>
		<replace>
		<![CDATA[
		<td colspan="$1" rowspan="$2" width="$3">
		]]>
		</replace>
	</match>
	
	<match name="tdEnd">
		<regex>(?s)(?i)\[/td\]</regex>
		<replace>
		<![CDATA[
		</td>
		]]>
		</replace>
	</match>

	<!-- Windows Media -->
	<match name="wmv">
		<regex>(?i)\[wmv\](.*?)\[/wmv\]</regex>
		<replace>
		<![CDATA[
		<object id="mediaPlayer" width="320" height="285" 
			classid="CLSID:22d6f312-b0f6-11d0-94ab-0080c74c7e95" 
			codebase="http://activex.microsoft.com/activex/controls/mplayer/en/nsmp2inf.cab#Version=5,1,52,701"
			standby="Loading Microsoft Windows Media Player components..." type="application/x-oleobject">
			<param name="fileName" value="$1" />
			<param name="animationatStart" value="true" />
			<param name="transparentatStart" value="true" />
			<param name="autoStart" value="true" />
			<param name="showControls" value="true" />
			<param name="loop" value="false" />
			<embed src="$1" width="320" height="285" type="application/x-mplayer2"
			pluginspage="http://microsoft.com/windows/mediaplayer/en/download/"
			id="mediaPlayer" name="mediaPlayer" displaysize="4" autosize="-1" 
			bgcolor="darkblue" showcontrols="true" showtracker="-1" 
			showdisplay="0" showstatusbar="-1" videoborder3d="-1"
			autostart="true" designtimesp="5311" loop="false">
			</embed>
		</object>
		]]>
		</replace>
	</match>
	
    <!-- Real Media -->
	<match name="rm">
		<regex>(?i)\[rm\](.*?)\[/rm\]</regex>
		<replace>
		<![CDATA[
		<object id="rvocx" classid="clsid:CFCDAA03-8BE4-11cf-B84B-0020AFBBCCFA" width="320" height="240">
			<param name="src" value="$1" />
			<param name="autostart" value="true" />
			<param name="controls" value="ImageWindow" />
			<param name="console" value="video" />
			<param name="loop" value="false" />
			<embed src="$1" width="320" height="240" 
			type="audio/x-pn-realaudio-plugin" controls="ImageWindow" console="video" autostart="true" loop="false">
			</embed>
        </object>
	    <br />
        <object id="rvocx" classid="clsid:CFCDAA03-8BE4-11cf-B84B-0020AFBBCCFA" width="320" height="30" />
			<param name="src" value="$1" />
			<param name="autostart" value="true" />
			<param name="controls" value="ControlPanel" />
			<param name="console" value="video" />
			<embed src="$1" width="320" height="30" 
			type="audio/x-pn-realaudio-plugin" controls="ControlPanel" console="video" autostart="true">
			</embed>
		</object>
		]]>
		</replace>
	</match>
</bbConfig>